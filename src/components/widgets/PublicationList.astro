---
import type { PublicationListProps } from '@/types'
import AuthorList from '@/components/ui/AuthorList.astro'

const { publications } = Astro.props as PublicationListProps
---

<ul>
  {
    publications.map((publication, index) => (
      <li>
        <a href={publication.data.url} target="_blank" rel="noopener noreferrer">
          <div class="publication-item">
            <h3 class="title">{publication.data.title}</h3>
            <p class="details">
              <AuthorList authors={publication.data.authors || []} />
              {publication.data.journal && (
                <span class="journal">{publication.data.journal}, </span>
              )}
              <span class="year">{publication.data.year || new Date(publication.data.pubDate).getFullYear()}</span>
            </p>
            {publication.body && (
              <div class="summary" set:html={publication.body} />
            )}
          </div>
        </a>
        {index < publications.length - 1 && <div class="separator" />}
      </li>
    ))
  }
</ul>
<div class="placeholder"></div>

<style>
  ul {
    padding: 0;
    margin: 0;
    list-style-type: none;
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  a {
    color: var(--text-primary);
    display: block;
    text-decoration: none;
    transition: opacity 0.15s ease-out;
  }

  @media (hover: hover) and (pointer: fine) {
    ul:hover a {
      opacity: 0.4;
    }

    ul:hover a:hover {
      opacity: 1;
    }

  }

  .publication-item {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    padding: 0.75rem 0;
  }

  .title {
    margin: 0;
    font-weight: bold;
    font-size: 1rem;
    line-height: 1.4;
  }

  .details {
    margin: 0;
    color: var(--text-secondary);
    font-size: 0.9rem;
    line-height: 1.3;
  }

  .journal {
    font-style: italic;
  }

  .year {
    font-weight: bold;
  }

  .summary {
    margin-top: 0.75rem;
    color: var(--text-secondary);
    font-size: 0.875rem;
    line-height: 1.5;
    font-style: italic;
  }

  .summary p {
    margin: 0 0 0.5rem 0;
  }

  .summary p:last-child {
    margin-bottom: 0;
  }

  .separator {
    height: 1px;
    background: var(--border);
    margin: 1.5rem 0;
  }

  .placeholder {
    height: 3rem;
  }
</style>